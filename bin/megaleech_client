#!/usr/bin/env ruby
require 'daemons'
require 'megaleech'

controller = Megaleech::TorrentsController.new
Daemons.run_proc("megaleech") do
  loop do
    system "ssh -R #{Megaleech.client_port}:localhost:22 #{Megaleech.remote_user}@#{Megaleech.remote_host} \"megaleech_download\""
    sleep(300)
  end
end